<section>
    <div class="container p-3">

        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-4 ">Add products</a>
        </div>

        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Discription</th>
       <th scope="col">Price</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.title}}</td>
      <td>{{this.catogary}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
       <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm" > Edit</a>
      </td>
      <td> <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm" onclick=" return confirm('Are you want to delete {{this.name}}?')"> Delete</a> </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>


    </div>



</section>